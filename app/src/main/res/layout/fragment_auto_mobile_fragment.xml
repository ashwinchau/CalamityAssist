<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    tools:context="com.calamity_assist.calamityassist.Framgment_drawn.AutoMobile_fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/auto_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:gravity="center_horizontal"
        android:text="Auto Mobile Comapany"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/ln_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:hint=" User Name"
            android:inputType="text" />

        <EditText

            android:id="@+id/vehicle_model"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:hint=" Model"
            android:inputType="text" />


        <EditText

            android:id="@+id/vehicle_style"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:hint=" Vehicle Style"
            android:inputType="text" />

        <EditText
            android:id="@+id/vehicle_color"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:hint=" Vehicle color"
            android:inputType="text" />
        <EditText


            android:id="@+id/vehicle_plat_number"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:hint=" Vehicle plat no"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_auto_mobile"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:inputType="text"
            android:text="SUBMIT" />
    </LinearLayout>

</RelativeLayout>

