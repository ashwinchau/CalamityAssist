<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login_smart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"

    tools:context="com.calamity_assist.automobilecompany.login">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/image_icon"
        android:layout_centerHorizontal="true">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_auto"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:layout_below="@+id/image_icon"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration !"
            android:textColor="@color/textview"
            android:clickable="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/edt1"
        android:layout_below="@+id/textView">

        <ImageView
            android:background="@drawable/image"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_person_black_24dp"
            />

        <EditText
            android:id="@+id/c_name"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:background="@drawable/edit_text"
            android:hint=" Company Name"
             />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/edt2"
        android:layout_below="@+id/edt1">

        <ImageView
            android:background="@drawable/image"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_email_black_24dp"
            />

        <EditText
            android:id="@+id/c_email"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text"
            android:hint=" Email Id"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/edt3"
        android:layout_below="@+id/edt2">

        <ImageView
            android:background="@drawable/image"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="60dp"
            android:src="@drawable/ic_place_black_24dp"
            />

        <EditText
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:background="@drawable/edit_text"
            android:hint=" Address"
            android:id="@+id/address_map_location"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/edt4"
        android:layout_below="@+id/edt3">

        <ImageView
            android:background="@drawable/image"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_phone_black_24dp"
            />

        <EditText
            android:id="@+id/c_phone"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="10"
            android:background="@drawable/edit_text"
            android:hint=" Phone"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/edt5"
        android:layout_below="@+id/edt4">

        <ImageView
            android:background="@drawable/image"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_web_black_24dp"
            />

        <EditText
            android:id="@+id/c_website"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textUri"
            android:background="@drawable/edit_text"
            android:hint=" WebSite"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/edt6"
        android:layout_below="@+id/edt5">

        <ImageView
            android:background="@drawable/image"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_lock_black_24dp"
            />

        <EditText
            android:id="@+id/c_password"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:background="@drawable/edit_text"
            android:hint=" Password"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/edt6">
        <Button
            android:id="@+id/auto_sign_up"
            android:text="Sign Up"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textview"
            android:onClick="reg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_shape"
            />

    </LinearLayout>

</RelativeLayout>
    </ScrollView>